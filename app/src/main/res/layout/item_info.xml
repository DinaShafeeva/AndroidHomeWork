<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

    <ImageView
            android:id="@+id/ava_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toTopOf="@id/tv_description_info"
            app:layout_constraintEnd_toStartOf="@+id/tv_name_info"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
            android:id="@+id/tv_name_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toTopOf="@id/tv_description_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ava_info"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Name" />

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    <TextView
            android:id="@+id/tv_description_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name_info"
            tools:text="Super powers" />


</androidx.constraintlayout.widget.ConstraintLayout>